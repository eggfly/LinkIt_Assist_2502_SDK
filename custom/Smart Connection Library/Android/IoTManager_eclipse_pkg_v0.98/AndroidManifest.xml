<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="mediatek.android.IoTManager">
	<uses-sdk android:minSdkVersion="10"/>
	
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.NET_ADMIN" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />	
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET" />
	
	<application android:icon="@drawable/iot" android:label="@string/app_name">
		<activity android:name=".IoTManager" android:label="@string/app_name_ver" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".SmartConnection"  android:configChanges="orientation|keyboardHidden">
		</activity>
		
		<activity android:name=".IoTManagement"  
		          android:configChanges="orientation|keyboardHidden"
		          android:windowSoftInputMode="adjustPan">
		</activity>

	</application>

</manifest>
